{% extends 'layout/base.html.twig' %}

{% block header_layout %}{% endblock %}

{% block body %}
    <p>Veuillez confirmer votre adresse Email en cliquant sur le lien </p>
    <a href="{{ url('confirm_email', { token: user.token }) }}">Confirmation Email </a>
    <dl>
        <dt>Nom</dt>
        <dd>{{ user.name }}</dd>
        <dt>Mot de passe</dt>
        <dd>{{ user.password }}</dd>
        <dt>Email</dt>
        <dd>{{ user.email }}</dd>
    </dl>
{% endblock %}